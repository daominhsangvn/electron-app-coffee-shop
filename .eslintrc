{
  "plugins": [angular],
  "extends": ["eslint:recommended", "angular"],
  "rules": {
    "quotes": [
      2,
      "single"
    ],
    "semi": [
      2,
      "always"
    ],
    "angular/di": [
      2,
      "$inject"
    ],
    "angular/module-setter": 0,
    "angular/no-service-method": 0
  },
  "parserOptions": {
    "sourceType": "module" // Parsing error: 'import' and 'export' may appear only with 'sourceType: module'
  },
  "env": {
    "es6": true,
    "browser": true,
    "jasmine": true,
    "mocha": true,
    "amd": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "globals" : {
    "chai"       : false,
    "describe"   : false,
    "it"         : false,
    "before"     : false,
    "beforeEach" : false,
    "after"      : false,
    "afterEach"  : false,
    "inject"     : false
  }
}
